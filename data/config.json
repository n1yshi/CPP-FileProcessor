{
  "processing": {
    "max_threads": 8,
    "queue_size": 100,
    "timeout_ms": 5000,
    "chunk_size": 1024
  },
  "logging": {
    "level": "INFO",
    "file": "processor.log",
    "console": true,
    "max_file_size": "10MB",
    "rotation": true
  },
  "processors": {
    "text": {
      "chunk_size": 1024,
      "encoding": "utf-8",
      "analyze_frequency": true,
      "extract_keywords": true,
      "min_word_length": 3
    },
    "image": {
      "max_width": 1920,
      "max_height": 1080,
      "quality": 85,
      "format": "auto",
      "preserve_metadata": true
    }
  },
  "output": {
    "directory": "./output",
    "create_subdirs": true,
    "preserve_structure": true,
    "compression": false
  },
  "performance": {
    "enable_profiling": false,
    "memory_limit": "1GB",
    "cpu_affinity": false,
    "priority": "normal"
  },
  "features": {
    "real_time_monitoring": true,
    "progress_notifications": true,
    "error_recovery": true,
    "batch_processing": true
  }
}